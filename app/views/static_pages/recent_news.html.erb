Recent News

<% if logged_in? %>
	Logged in do you want to <%= link_to "logout", logout_path, method: "delete" %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="blogpost_form">
        <%= render 'shared/blogpost_form' %>
      </section>
    </aside>
  </div>

<% else %>
	Please <%= link_to "log in", login_path %>
<% end %>

<div class="col-md-8">
    <% if Blogpost.any? %>
      <h3>Recent News (<%= Blogpost.count %>)</h3>
      <ol class="blogposts">
        <%= render Blogpost.all %>
      </ol>
    <% end %>
 </div>
