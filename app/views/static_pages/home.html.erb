<% provide(services = ["warehousing", "transloading", "drayage",
	"stripping", "packaging", "rail_access", "welding", "trucking"]) %>

<div id="background-pallette">
	<div id="background-screen">
		<div id="logo_container">
			<%= link_to image_tag("logo.jpg"), root_path, id: "logo" %>
		</div>

		

		<%= render 'layouts/scrolling_pictures' %>
		<%= render 'layouts/header' %>
		<hr></hr>
		<div id="background_tab">
			<div id="all_services_container" class='selected'>
				<%= render 'tabs/services_photos' %>
				
				<% for i in 0..7 %>
					<%= render "service_descriptions/#{services[i]}" %>
				<% end %>
			</div>


			<div id="all_about_us_container" class='faded_out'>
				<%= render 'tabs/about_us' %>
			</div>

			<div id="all_recent_news_container" class="faded_out">
				<%= render 'tabs/recent_news' %>
			</div>

			<div id="all_contact_container" class="faded_out">
				<%= render 'tabs/contact' %>
			</div>

			<div id="all_location_container" class="faded_out">
				<%= render 'tabs/location' %>
			</div>
		</div>
		


		<% for i in 1..20 %>
			<p><br></p>
		<% end %>
		
	</div>
</div>

<footer id="footer">

</footer>