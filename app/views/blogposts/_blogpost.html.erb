

<li id="blogpost-<%= blogpost.id %>">

  <div class="user">Posted by <%= blogpost.user.name %></div><br>


  	<span class="more">
		<%= simple_format(blogpost.content) %>
	</span>
		  		




  	<div class="timestamp"></br>
   	 Published <%= (blogpost.created_at) %>

    <% if logged_in? %>
    	<%= link_to "delete", blogpost, method: :delete,
    									data: {confirm: "You sure?" } %>
 	<% end %>
 	</div>

</li>





